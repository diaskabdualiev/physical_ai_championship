<mujoco model="g1_29dof room scene">
  <include file="g1_29dof.xml"/>


  <statistic center="0 0 0.5" extent="5.0"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="0" elevation="-70"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="floor_tex" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
      rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="floor_mat" texture="floor_tex" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="wall_mat" rgba="0.3 0.3 0.35 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 2.5" dir="0 0 -1" directional="true"/>

    <!-- Floor 4x4m -->
    <geom name="floor" type="box" size="2 2 0.05" pos="0 0 -0.05" material="floor_mat"/>

    <!-- Walls: height 2.5m, thickness 0.1m -->
    <!-- North wall (+Y) -->
    <geom name="wall_north" type="box" size="2.05 0.05 1.25" pos="0 2.05 1.25" material="wall_mat"/>
    <!-- South wall (-Y) -->
    <geom name="wall_south" type="box" size="2.05 0.05 1.25" pos="0 -2.05 1.25" material="wall_mat"/>
    <!-- East wall (+X) -->
    <geom name="wall_east" type="box" size="0.05 2.05 1.25" pos="2.05 0 1.25" material="wall_mat"/>
    <!-- West wall (-X) -->
    <geom name="wall_west" type="box" size="0.05 2.05 1.25" pos="-2.05 0 1.25" material="wall_mat"/>

    <!-- Red cube target -->
    <body name="red_cube" pos="1.5 0.5 0.15">
      <freejoint name="cube_joint"/>
      <geom name="cube_geom" type="box" size="0.15 0.15 0.15" rgba="0.8 0.2 0.2 1" mass="0.5"/>
    </body>
  </worldbody>
</mujoco>
